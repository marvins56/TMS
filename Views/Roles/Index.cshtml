@model IEnumerable<TMS.Models.RolesTable>

@{
    ViewBag.Title = "Index";
}


<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-title">
                    All ROLES

                    <a href="@Url.Action("Create", "Roles")" class="btn btn-social-icon btn-outline-primary float-right">
                        <i class="fa-solid fa-plus fa-4x pt-3"></i>
                    </a>
                </p>
                <div class="row">
                    <div class="col-12">
                        <div class="table-responsive">
                            <table class="display expandable-table" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.RoleName)
                                        </th>
                                       
                                        <th>ACTION</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                           <td> @Html.DisplayFor(model => item.RoleName)</td>
                                            
                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>