@model TMS.Models.UsersRolesTable

@{
    ViewBag.Title = "Edit";
}


@if (Session["urserrole"].Equals(2) || Session["urserrole"].Equals(5))
{
    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="jumbotron text-center">
            <h1 class="display-4"> EDIT USER ROLES</h1>
            <p class="lead ">Editing user role</p>
        </div>


        <div class="row">
            <div class="col-md-6 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="form-horizontal">
                            <h4>EDIT USER ROLES</h4>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.UsersRolesID)

                            <div class="form-group">
                                @Html.LabelFor(model => model.Userid, "Userid", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("Userid", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Userid, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.RolesId, "RolesId", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.DropDownList("RolesId", null, htmlAttributes: new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.RolesId, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Save" class="btn btn-primary" />
                                    <a class="btn btn-outline-primary" href=" @Url.Action("Index", "UsersRoles" )"> View Changes</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 grid-margin stretch-card ">
                <div class="card ">
                    <div class="card-body">
                        <div class="ml-xl-4 mt-3  justify-content-center " style="text-align:center">
                            <p class="card-title"></p>
                            <img src="~/App_Start/Email/assets/img/pol.png" class="img-fluid" style="width:40%" />

                        </div>
                    </div>
                </div>
            </div>
        </div>

    }

}
else
{
    <div class="card text-center  mt-100">
        <div class="card-header bg-danger text-white">Notification</div>
        <div class="card-body">
            <h5 class="card-title">NOT AUTHORISED</h5>
            <p class="card-text">  access denied</p>


        </div>
        <div class="card-footer text-muted"> <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary text-black"> <i class="fa-solid fa-house-circle-check"></i></a></div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



